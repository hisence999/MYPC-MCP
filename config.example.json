{
    "_comment": "MYPC-MCP 配置文件 - 将此文件复制为 config.json 并根据需要修改",

    "server": {
        "_comment": "服务器配置",
        "enabled": true,
        "name": "MyPC-MCP",
        "port": 9999,
        "host": "0.0.0.0",
        "domain": "localhost",

        "_network": "网络访问配置说明",
        "_host_explanation": "host: 监听地址。0.0.0.0 = 监听所有网络接口（局域网+公网），127.0.0.1 = 仅本机",
        "_domain_explanation": "domain: 访问域名。localhost = 本机访问，IP地址 = 局域网访问，你的域名 = 公网访问",

        "_lan_example": "局域网访问示例:",
        "_lan_host": "  host: 0.0.0.0",
        "_lan_domain": "  domain: 你的局域网IP (如 192.168.1.100)",

        "_wan_example": "公网访问示例:",
        "_wan_host": "  host: 0.0.0.0",
        "_wan_domain": "  domain: 你的公网域名或IP",
        "_wan_firewall": "  需要在路由器设置端口转发: 外部端口9999 -> 本机IP:9999",
        "_wan_firewall_cmd": "  Windows防火墙需添加入站规则允许端口9999",

        "screenshots_dir": "./screenshots",
        "local_host_header": "localhost:9999"
    },

    "safe_zones": [
        "%USERPROFILE%\\Documents",
        "%USERPROFILE%\\Downloads",
        "%USERPROFILE%\\Desktop",
        "%USERPROFILE%\\Pictures",
        "D:\\",
        "E:\\"
    ],

    "paths": {
        "workspace": "D:\\ALICE",
        "everything": [
            "C:\\Program Files\\Everything\\es.exe",
            "C:\\Program Files (x86)\\Everything\\es.exe",
            "D:\\APP\\Everything\\es.exe",
            "es.exe"
        ],
        "git_bash": [
            "C:\\Program Files\\Git\\bin\\bash.exe",
            "C:\\Program Files (x86)\\Git\\bin\\bash.exe",
            "D:\\Program Files\\Git\\bin\\bash.exe",
            "E:\\Program Files\\Git\\bin\\bash.exe"
        ],
        "download_dirs": [
            "D:\\DOWNLOAD",
            "D:\\Download"
        ],
        "drives": ["C:", "D:", "E:", "F:"]
    },

    "vlm": {
        "enabled": false,
        "base_url": "https://open.bigmodel.cn/api/paas/v4",
        "api_key": "",
        "model": "glm-4.6v",
        "prompt": "请详细描述图片并重点描述文字信息。"
    },

    "screen": {
        "max_screenshots": 20,
        "llm_max_dim": 800,
        "llm_quality": 60,
        "vlm_max_dim": 1000,
        "vlm_quality": 60,
        "vlm_timeout": 60
    },

    "system": {
        "cpu_interval": 0.1
    },

    "files": {
        "default_workspace": "D:\\ALICE",
        "default_read_lines": 300,
        "grep_max_results": 100
    },

    "window": {
        "notification_duration": 60,
        "notification_app_name": "MyPC",
        "process_list_limit": 20,
        "window_list_limit": 50,
        "delay_min_seconds": 1,
        "delay_max_seconds": 120
    },

    "search": {
        "default_limit": 20
    },

    "keyboard_mouse": {
        "failsafe": true,
        "pause": 0.1,
        "type_interval": 0.02
    },

    "detector": {
        "search_depth": 3,
        "common_dirs": [
            "Desktop", "Downloads", "Documents", "Pictures",
            "Videos", "Music", "Projects", "Source", "Repos",
            "GitHub", "Work", "Workspace"
        ]
    },

    "ssh": {
        "hosts": {
            "MyServer": {
                "host": "192.168.1.100",
                "port": 22,
                "user": "your_username",
                "password": "your_password",
                "_comment": "Or use key_file instead of password"
            }
        },
        "allowed_commands": [
            "docker", "docker-compose",
            "git", "npm", "node", "python", "pip",
            "ping", "curl", "wget", "ss", "ip", "nslookup", "dig",
            "grep", "awk", "sed", "sort", "uniq", "wc", "tail", "head", "less",
            "vim", "nano", "cat", "journalctl"
        ]
    }
}
